<main class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    {{#if editMode}}Edición{{else}}Creación{{/if}} de regiones
                </div>
                <div class="card-body">

                    <form method="POST" action="/regiones/{{#if editMode}}editarRegion{{else}}crearRegion{{/if}}">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre de la región:</label>
                            <input required type="text" class="form-control" id="name" name="Name" value="{{#if editMode}}{{region.name}}{{/if}}" />
                        </div>
                        {{#if editMode}}
                            <input type="hidden" name="Id" value="{{region.id}}">
                        {{/if}}
                        <div class="row-col-12 text-end">
                            <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
                            <a href="/regiones" type="button" class="btn btn-warning">volver atras</a>
                        </div>                    
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
